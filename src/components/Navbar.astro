---
// Componente Navbar - Navegación fija para scroll suave
---

<nav class="fixed top-0 left-0 right-0 z-50 glass !border-b !border-sky-300/10">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
            
            <a href="#hero" class="text-xl font-bold text-white nav-link-star">
                Portfolio
            </a>
            
            <ul class="hidden md:flex space-x-8">
                <li>
                    <a href="#hero" class="text-gray-300 nav-link-star">Inicio</a>
                </li>
                <li>
                    <a href="#stack" class="text-gray-300 nav-link-star">Stack</a>
                </li>
                <li>
                    <a href="#proyectos" class="text-gray-300 nav-link-star">Proyectos</a>
                </li>
                <li>
                    <a href="#contacto" class="text-gray-300 nav-link-star">Contacto</a>
                </li>
            </ul>
            
            <button id="menu-toggle" class="md:hidden text-gray-300 hover:text-white transition-colors">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
            </button>
        </div>
        
        <div id="mobile-menu" class="hidden md:hidden pb-4">
            <ul class="space-y-2">
                <li>
                    <a href="#hero" class="block px-3 py-2 text-gray-300 nav-link-star mobile-menu-link">Inicio</a>
                </li>
                <li>
                    <a href="#stack" class="block px-3 py-2 text-gray-300 nav-link-star mobile-menu-link">Stack</a>
                </li>
                <li>
                    <a href="#proyectos" class="block px-3 py-2 text-gray-300 nav-link-star mobile-menu-link">Proyectos</a>
                </li>
                <li>
                    <a href="#contacto" class="block px-3 py-2 text-gray-300 nav-link-star mobile-menu-link">Contacto</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<script>
	const menuToggle = document.getElementById('menu-toggle');
	const mobileMenu = document.getElementById('mobile-menu');
	
	if (menuToggle && mobileMenu) {
		menuToggle.addEventListener('click', () => {
			mobileMenu.classList.toggle('hidden');
		});
	}
	
	// Cerrar menú móvil al hacer clic en un enlace
	if (mobileMenu) {
		const mobileLinks = mobileMenu.querySelectorAll('a');
		mobileLinks.forEach(link => {
			link.addEventListener('click', () => {
				mobileMenu.classList.add('hidden');
			});
		});
	}
</script>

<style>
	/* Efecto de estrella brillante en el espacio */
	.nav-link-star {
		transition: all 0.3s ease;
		position: relative;
	}
	
	.nav-link-star:hover {
		color: #ffffff !important;
		text-shadow: 
			0 0 3px rgba(255, 255, 255, 0.4),
			0 0 6px rgba(255, 255, 255, 0.25),
			0 0 12px rgba(255, 255, 255, 0.15);
		animation: star-twinkle 3s ease-in-out infinite;
	}
	
	@keyframes star-twinkle {
		0%, 100% {
			opacity: 1;
			text-shadow: 
				0 0 3px rgba(255, 255, 255, 0.35),
				0 0 6px rgba(255, 255, 255, 0.25),
				0 0 10px rgba(255, 255, 255, 0.15),
				0 0 15px rgba(255, 255, 255, 0.1);
		}
		50% {
			opacity: 0.95;
			text-shadow: 
				0 0 4px rgba(255, 255, 255, 0.3),
				0 0 8px rgba(255, 255, 255, 0.2),
				0 0 12px rgba(255, 255, 255, 0.15),
				0 0 18px rgba(255, 255, 255, 0.1);
		}
	}
	
	/* Mantener el estilo del menú móvil */
	.mobile-menu-link:hover {
		color: #ffffff !important;
		text-shadow: 
			0 0 3px rgba(255, 255, 255, 0.4),
			0 0 6px rgba(255, 255, 255, 0.25),
			0 0 10px rgba(255, 255, 255, 0.15);
	}
</style>
