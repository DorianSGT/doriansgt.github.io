---
// Importamos los datos (Tu "Base de Datos")
import proyectos from "../data/proyectos.json";

// YA NO NECESITAMOS LA VARIABLE "const proyectos" AQUÍ PORQUE YA VIENE DEL IMPORT
---

<section
	id="proyectos"
	class="pt-20 flex items-center justify-center px-4 pb-8"
>
	<div class="w-full">
		<h2 class="text-4xl md:text-6xl font-bold text-center mb-4 neon-white">
			Proyectos
		</h2>
		<p class="text-center text-gray-400 mb-12 text-lg">
			Algunos de mis trabajos y laboratorios de ASIR
		</p>

		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
			{
				/* AQUÍ ESTABA EL ERROR: Cambiamos las claves a español para que coincidan con tu JSON */
			}
			{
				proyectos.map((proyecto: any) => (
					<div class="glass rounded-xl overflow-hidden hover:scale-105 transition-all duration-300 group">
						{proyecto.imagen && (
							<div class="w-full h-48 overflow-hidden">
								<img
									src={proyecto.imagen}
									alt={proyecto.titulo}
									class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
								/>
							</div>
						)}
						<div class="p-6">
							<h3 class="text-2xl font-bold mb-3 text-gray-100 group-hover:text-purple-300 transition-colors">
								{proyecto.titulo}
							</h3>
							<p class="text-gray-400 mb-4 leading-relaxed">
								{proyecto.descripcion}
							</p>
							<div class="flex flex-wrap gap-2 mb-4">
								{/* OJO: En el JSON lo llamamos 'tags', no 'tech' */}
								{proyecto.tags.map((tag: string) => (
									<span class="px-3 py-1 bg-purple-500/20 text-purple-300 rounded-full text-sm font-mono">
										{tag}
									</span>
								))}
							</div>
							<div class="flex gap-4">
								{/* Botón Ver Código / Link / Demo , si no hay link de demo no lo muestra solo el de github*/}
								{proyecto.link && proyecto.link !== "#" && (
									<a
										href={proyecto.link}
										target="_blank"
										class="text-blue-400 hover:text-blue-300 transition-colors flex items-center gap-2"
									>
										<svg
											class="w-5 h-5"
											fill="none"
											stroke="currentColor"
											viewBox="0 0 24 24"
										>
											<path
												stroke-linecap="round"
												stroke-linejoin="round"
												stroke-width="2"
												d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
											/>
										</svg>
										Demo
									</a>
								)}

								{/* Boton de Github */}
								{
									<a
										href={proyecto.github}
										target="_blank"
										class="text-gray-400 hover:text-gray-300 transition-colors flex items-center gap-2"
									>
										<svg
											class="w-5 h-5"
											fill="currentColor"
											viewBox="0 0 24 24"
										>
											<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
										</svg>
										GitHub
									</a>
								}
							</div>
						</div>
					</div>
				))
			}
		</div>
	</div>
</section>
